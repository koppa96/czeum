<UserControl
    x:Class="Czeum.Client.Controls.Connect4Grid"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Czeum.Client.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Grid x:Name="BoardContainer" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="DodgerBlue" 
          BorderBrush="DarkGray" BorderThickness="2" CornerRadius="60, 60, 10, 10" Margin="20" Padding="20">
        <TextBlock x:Name="tb"/>
    </Grid>
</UserControl>
