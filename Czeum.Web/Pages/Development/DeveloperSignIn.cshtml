@page
@model Czeum.Api.Pages.Development.DeveloperSignInModel
@{
    Layout = null;
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>DeveloperSignIn</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="~/styles/styles.css" />
</head>
<body>
    <main class="container h-100">
        <div class="row h-100 justify-content-center align-items-center">
            @if (Model.AccessToken == null)
            {
            <div class="col-6">
                <form method="post" class="w-100">
                    <div class="row">
                        <div class="col-12">
                            <div class="form-group">
                                <label>Username</label>
                                <input asp-for="Username" class="form-control" />
                            </div>
                        </div>
                    </div>

                    <div>
                        <div class="row">
                            <div class="col-12">
                                <label>Password</label>
                                <input asp-for="Password" class="form-control" type="password" />
                            </div>
                        </div>
                    </div>

                    <div class="row flex-row-reverse mt-3">
                        <div class="col">
                            <button type="submit" class="btn btn-primary">Get Token</button>
                        </div>
                    </div>
                </form>
            </div>
            }
            
            @if (Model.AccessToken != null)
            {
                <div class="row">
                    <div class="col-12">
                        <div class="token">
                            <strong>Access token:</strong> @Model.AccessToken
                        </div>
                    </div>
                </div>
            
                <div class="row">
                    <button id="navigate" class="btn btn-primary" type="button" asp-route="swagger/index.html">Proceed to swagger</button>
                </div>
            }
        </div>
    </main>

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>

    <script type="text/javascript">
        var button = document.getElementById("navigate");
        if (button) {
            button.addEventListener("click", function () {
                window.location.href = "https://localhost:5001/swagger/index.html";
            });
        }
    </script>
</body>
</html>
